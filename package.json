{
  "name": "splace",
  "version": "1.0.1",
  "description": "Split and replace string",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf coverage lib",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable && npm run lint && npm run lint:tsc && npm run test:ci && npm run clean && npm run build",
    "test": "jest",
    "test:ci": "CI=true jest --ci --colors --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/splace"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/splace/issues"
  },
  "keywords": [
    "splace",
    "string",
    "split",
    "replace"
  ],
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/compat": "1.2.0",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.12.0",
    "@types/jest": "29.5.13",
    "@types/node": "22.7.5",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "eslint": "9.12.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tsdoc": "0.3.0",
    "globals": "15.11.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "pinst": "3.0.0",
    "prettier": "3.3.3",
    "standard-version": "9.5.0",
    "ts-jest": "29.2.5",
    "typescript": "5.6.3"
  },
  "files": [
    "lib/"
  ],
  "license": "MIT"

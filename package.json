{
  "name": "splace",
  "version": "1.0.1",
  "description": "Split and replace string",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf coverage lib",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "lint:tsc": "tsc",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable && npm run lint && npm run lint:tsc && npm run test:ci && npm run clean && npm run build",
    "test": "jest",
    "test:ci": "CI=true jest --ci --colors --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remarkablemark/splace"
  },
  "bugs": {
    "url": "https://github.com/remarkablemark/splace/issues"
  },
  "keywords": [
    "splace",
    "string",
    "split",
    "replace"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.4.1",
    "@types/jest": "29.5.12",
    "@types/node": "22.5.4",
    "@typescript-eslint/eslint-plugin": "8.4.0",
    "@typescript-eslint/parser": "8.4.0",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tsdoc": "0.3.0",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "pinst": "3.0.0",
    "prettier": "3.3.3",
    "standard-version": "9.5.0",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4"
  },
  "files": [
    "lib/"
  ],
  "license": "MIT"
}
